<% if @render %>


  <% if @photos.count > 0 %>
    <div>
      <h1>Your best photos: </h1>
      <div class="likes"><%= link_to "Likes", sort_by_path(:total_likes)%></div>
      <div class="likes"><%= link_to "Likes by Females Only", sort_by_path(:female_likes)%></div>
      <div class="likes"><%= link_to "Likes by Males Only", sort_by_path(:male_likes)%></div>
    </div>
    <form action = "/" method="post">
    <div class="photo">
      <div class="row">
      <% @photos.each do |photo| %>
          <div class="col-md-4">
            <img src="<%= photo[:url] %>"><br>
            <input type="checkbox" name="photo" value="<%= photo[:id] %>">
            <p>
              <% sort_by = @sort_by.to_sym %>
              <%= photo[sort_by] %>
              <%= "Male" if sort_by == :male_likes %> 
              <%= "Female" if sort_by == :female_likes %>
              Likes
            </p>
          </div> 
      <% end %> 
      </div>
    </div>

      <div class="row">
        <div class="col-md-4">
          <button type="submit">Save Best Photos!</button>  
        </div>
        <div class="col-md-4">
          <button id="okcupid">Export to OKCupid<sup>&beta;</sup></button>
        </div>
        <div class="col-md-4">
          <button id="tinder">Export to tinder<sup>&beta;</sup></button>
        </div>
      </div>
    </form>
    <% if @photos.count > 1 %> 
      <h3> <%= @photos.count %> photos found.</h3>
    <% else %>
      <h3> 1 photo found.</h3>      
    <% end %>
  <% else%>
    <div>
      Sorry! Likes Me could not find any good photos of you. Maybe you should go work on your <a href="http://www.jokes.com/">jokes</a>.<br>
      <img class="sad" src="http://indiana.laxallstars.com/files/2011/06/sad-face-paper-bag.jpg" alt=":c">
    </div>
  <% end %>

<% else %>

    <h1><%= button_to "Find my best\nphotos!", user_omniauth_authorize_path(:facebook) %></h1>

<% end %>



